{
  "name": "lambcycle",
  "version": "0.1.4",
  "license": "MIT",
  "author": "Julian Tellez",
  "description": "üêë üõµ A declarative lambda middleware with life cycle hooks üêë üõµ",
  "repository": {
    "type": "git",
    "url": "https://github.com/juliantellez/lambcycle"
  },
  "main": "dist/main.js",
  "scripts": {
    "fmt": "prettier --config config/prettier/.prettierrc '**/*.ts' -l",
    "fmt:fix": "npm run fmt -- --write",
    "lint": "tslint -p tsconfig.json -c config/tslint/tslint.json",
    "lint:fix": "npm run lint -- --fix",
    "test": "mocha --opts config/mocha/mocha.opts",
    "test:watch": "npm run test -- --watch --watch-extensions ts",
    "test:coverage": "nyc npm run test",
    "test:bundlesize": "bundlesize",
    "coveralls": "nyc report --reporter=text-lcov | coveralls",
    "build": "rm -rf dist && webpack --config config/webpack/webpack.config.ts"
  },
  "nyc": {
    "extends": "config/nyc/nycrc.json"
  },
  "bundlesize": [
    {
      "path": "./dist/main.js",
      "maxSize": "11 kB",
      "compression": "none"
    }
  ],
  "devDependencies": {
    "@types/aws-lambda": "^8.10.17",
    "@types/chai": "^4.1.7",
    "@types/mocha": "^5.2.5",
    "@types/node": "^10.12.18",
    "aws-lambda": "^0.1.2",
    "bundlesize": "^0.17.0",
    "chai": "^4.2.0",
    "coveralls": "^3.0.2",
    "mocha": "^5.2.0",
    "nyc": "^13.1.0",
    "prettier": "^1.15.3",
    "ts-loader": "^5.3.2",
    "ts-node": "^7.0.1",
    "tslint": "^5.12.0",
    "tslint-eslint-rules": "^5.4.0",
    "typescript": "^3.2.2",
    "webpack": "^4.28.3",
    "webpack-cli": "^3.2.0"
  },
  "keywords": [
    "lambda",
    "aws-lambda",
    "lambda-function",
    "serverless",
    "middleware"
  ]
}
